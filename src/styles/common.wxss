.markdown-body > h1,
.markdown-body h2 {
  padding-bottom: 30px;
}
.markdown-body .uku-doc-card {
  margin-bottom: 30px;
  padding: 24px;
  background-color: #fff;
  border-radius: 20px;
}
.markdown-body .uku-doc-card .uku-doc-intro {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.markdown-body .uku-doc-card .uku-doc-intro > h2 {
  margin-top: 20px;
}
.markdown-body .uku-doc-card .uku-doc-intro > p {
  margin: 20px 0 0;
  padding: 0;
}
.markdown-body .uku-doc-card > h3 {
  margin-bottom: 20px;
}
.markdown-body .uku-doc-card > p {
  margin-bottom: 15px;
}
.markdown-body .uku-doc-card > p:nth-last-child(1) {
  margin-bottom: 0;
}
.markdown-body .uku-doc-card > pre {
  display: block;
  margin-bottom: 20px;
}
.markdown-body .uku-doc-card > pre > code {
  display: block;
  padding: 16px 20px;
  white-space: pre-wrap;
  word-wrap: break-word;
  -webkit-font-smoothing: auto;
  background-color: #f8f8f8;
  border-radius: 20px;
  font-weight: 400;
  font-size: 14px;
  font-family: Source Code Pro,Monaco,Inconsolata,monospace;
  line-height: 26px;
  overflow-x: auto;
}
.markdown-body .uku-doc-card > pre:nth-last-child(1) {
  margin-bottom: 0;
}
.markdown-body .uku-doc-card > table > thead > tr,
.markdown-body .uku-doc-card > table tbody > tr {
  border-bottom: 1px solid #f1f4f8;
}
.markdown-body .uku-doc-card > table > thead > tr > th,
.markdown-body .uku-doc-card > table tbody > tr > th,
.markdown-body .uku-doc-card > table > thead > tr td,
.markdown-body .uku-doc-card > table tbody > tr td {
  padding: 10px 20px;
}
